@model IEnumerable<VisitorRegistration.Models.Domain.Visitor>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["Title"] = "Log out";
}

<h1>@ViewData["Title"]</h1>
<p>Current registered amount: <b>@Model.Count()</b></p>

<table class="table table-striped table-bordered">
    <tr>
        <th>Name</th>
        <th>Last Name</th>
        <th>Type of visitor</th>
    </tr>
    @foreach(var visitor in Model)
    {
        <tr>
            <td>@visitor.Name</td>
            <td>@visitor.LastName</td>
            <td>@visitor.VisitorType</td>
            <td>
                <form asp-controller="Visitor" asp-action="LogOut" asp-route-id="@visitor.VisitorId" method="post" role="form">
                    <div>
                        <button type="submit" name="logout">Log out</button>
                    </div>
                </form>
            </td>
        </tr>
    }
</table>