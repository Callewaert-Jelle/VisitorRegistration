@model IEnumerable<VisitorRegistration.Models.Domain.Visitor>
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localizer
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["Title"] = localizer["LogOut"];
}

<h1>@ViewData["Title"]</h1>

<table class="table table-striped table-bordered">
    <tr>
        <th>@localizer["Name"]</th>
        <th>@localizer["LastName"]</th>
        <th>@localizer["Type"]</th>
    </tr>
    @foreach(var visitor in Model)
    {
        <tr>
            <td>@visitor.Name</td>
            <td>@visitor.LastName</td>
            <td>@localizer[visitor.VisitorType.ToString()]</td>
            <td>
                <form asp-controller="Visitor" asp-action="LogOut" asp-route-id="@visitor.VisitorId" method="post" role="form">
                    <div>
                        <button type="submit" name="logout">@localizer["LogOut"]</button>
                    </div>
                </form>
            </td>
        </tr>
    }
</table>